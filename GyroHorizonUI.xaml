<UserControl x:Class="GyroHorizon.GyroHorizonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GyroHorizon"
             xmlns:gyroHorizon="clr-namespace:GyroHorizon"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="TheGyroHorizon">

    <UserControl.Resources>
        <ResourceDictionary>
            <DrawingImage x:Key="AirplaneImage">
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <DrawingGroup.Children>
                            <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M -6.35783e-007,16L 12.6335,16">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="#FFFFFFFF"
                                             Geometry="F1 M 15.9834,19.3299C 17.8224,19.3299 19.3132,17.839 19.3132,16C 19.3132,14.1609 17.8224,12.6701 15.9834,12.6701C 14.1443,12.6701 12.6535,14.1609 12.6535,16C 12.6535,17.839 14.1443,19.3299 15.9834,19.3299 Z ">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 32,16L 19.2933,16">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingGroup.Children>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="Root">
        <local:PitchIndicator x:Name="ThePitchIndicator"
                              Pitch="{Binding RelativeSource={RelativeSource FindAncestor,
                               AncestorType={x:Type local:GyroHorizonUI}},
                               Path=Pitch}" />


        <Image x:Name="TheRollIndicator" HorizontalAlignment="Center" VerticalAlignment="Center"
               Source="{StaticResource AirplaneImage}"
               Height="200"
               Width="200"
               RenderTransformOrigin=".5,.5">
            <Image.RenderTransform>
                <RotateTransform Angle="{Binding ElementName=TheGyroHorizon, Path=Roll}" />
            </Image.RenderTransform>
        </Image>
    </Grid>


