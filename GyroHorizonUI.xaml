<UserControl x:Class="GyroHorizon.GyroHorizonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GyroHorizon"
             xmlns:gyroHorizon="clr-namespace:GyroHorizon"
             xmlns:calcBinding="clr-namespace:CalcBinding;assembly=CalcBinding"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="300"
             x:Name="This">

    <UserControl.Resources>
        <ResourceDictionary>
            <DrawingImage x:Key="AirplaneImage">
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <DrawingGroup.Children>
                            <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M -6.35783e-007,16L 12.6335,16">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="#FFFFFFFF"
                                             Geometry="F1 M 15.9834,19.3299C 17.8224,19.3299 19.3132,17.839 19.3132,16C 19.3132,14.1609 17.8224,12.6701 15.9834,12.6701C 14.1443,12.6701 12.6535,14.1609 12.6535,16C 12.6535,17.839 14.1443,19.3299 15.9834,19.3299 Z ">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1 M 32,16L 19.2933,16">
                                <GeometryDrawing.Pen>
                                    <Pen LineJoin="Round" Brush="#FF000000" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingGroup.Children>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="Root" ClipToBounds="True">
        <Grid Height="{calcBinding:Binding 'ActualHeight', ElementName=This}">
            <Grid.Background>
                <LinearGradientBrush MappingMode="Absolute">
                    <GradientStop Color="#FFAAD5E7"
                                  Offset="{calcBinding:Binding 
                                  'Math.Sin(Pitch / 90)', ElementName=This}" />
                    <GradientStop Color="#FF6F8516"
                                  Offset="{calcBinding:Binding 
                                  '1 + Math.Sin(Pitch / 90)', ElementName=This}" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <UniformGrid Grid.RowSpan="2" x:Name="ThePitchScale" Columns="1" VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Width="{calcBinding:Binding '0.5*ActualWidth', ElementName=TheRollIndicator}"
                     Height="{calcBinding:Binding 'ActualHeight', ElementName=This}">
            <UniformGrid.RenderTransform>
                <TranslateTransform Y="{Binding YOffset, ElementName=This}" />
            </UniformGrid.RenderTransform>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Top" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Center" />
                <Rectangle Fill="Black" Height="3" VerticalAlignment="Bottom" />
            </Grid>
        </UniformGrid>


        <!-- <Image x:Name="TheRollIndicator" HorizontalAlignment="Center" VerticalAlignment="Center" -->
        <!--        Source="{StaticResource AirplaneImage}" Margin="100" -->
        <!--        RenderTransformOrigin=".5,.5"> -->
        <!--     <Image.RenderTransform> -->
        <!--         <RotateTransform Angle="{Binding ElementName=This, Path=Roll}" /> -->
        <!--     </Image.RenderTransform> -->
        <!-- </Image> -->
        <Grid x:Name="TheRollIndicator" HorizontalAlignment="Center" VerticalAlignment="Center"
              RenderTransformOrigin=".5,.5">
            <Ellipse HorizontalAlignment="Center" Width="60" Stroke="Black" StrokeThickness="3"
                     VerticalAlignment="Center" Height="60" />
            <Rectangle HorizontalAlignment="Left" Height="3" Margin="0,0,100,0" Fill="Black"
                       VerticalAlignment="Center" Width="60" />
            <Rectangle HorizontalAlignment="Left" Height="3" Margin="100,0,0,0" Fill="Black"
                       VerticalAlignment="Center" Width="60" />
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding ElementName=This, Path=Roll}" />
            </Grid.RenderTransform>
        </Grid>
    </Grid>


    <!--<Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <ProgressBar Grid.Row="0" Width="40" Orientation="Vertical"
                     Value="{Binding ElementName=TheGyroHorizon, Path=Pitch }" />
        <ProgressBar Grid.Row="1" Height="40" Value="{Binding ElementName=TheGyroHorizon, Path=Drift}" />
        
        
        <Image x:Name="TheRollIndicator" HorizontalAlignment="Center" Grid.Row="2"
               Source="{StaticResource AirplaneImage}"
               Height="200"
               Width="200"
               RenderTransformOrigin=".5,.5">
            <Image.RenderTransform>
                <RotateTransform Angle="{Binding ElementName=TheGyroHorizon, Path=Roll}" />
            </Image.RenderTransform>
        </Image>


    </Grid>-->

</UserControl>