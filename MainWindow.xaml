<Window x:Class="GyroHorizon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GyroHorizon"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" MinHeight="300" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <UniformGrid Rows="1">
            <local:NumericUpDown x:Name="DriftInput" Label="DriftInput" />
            <local:NumericUpDown x:Name="PitchInput" Label="PitchInput" />
            <local:NumericUpDown x:Name="RollInput" Label="RollInput" />
        </UniformGrid>

        <!--TODO add buttons to change Raw Roll etc or set it randomly in main window code-->
        <local:GyroHorizonUI Grid.Row="1" Grid.Column="0"
                               Drift="{Binding ElementName=DriftInput, Path=Value}"
                               Pitch="{Binding ElementName=PitchInput, Path=Value}"
                               Roll="{Binding ElementName=RollInput, Path=Value}"
                               />
    </Grid>
</Window>